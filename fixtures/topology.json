{
    "name": "location-pipeline",
    "nodes": {
        "write-locations": {
            "inputs": ["locations"],
            "processor": {
                "platform": "node.js",
                "file": "./processors/writeLocation.js",
                "dependencies": {
                    "cassandra-driver": "^3.3.0"
                }
            },
            "outputs": []
        },
        "predict-arrivals": {
            "inputs": ["locations"],
            "processor": {
                "platform": "node.js",
                "file": "./processors/predictArrivals.js"
            },
            "outputs": ["estimatedArrivals"]
        },
        "notify-arrivals": {
            "inputs": ["estimated-arrivals"],
            "processor": {
                "platform": "node.js",
                "file": "./processors/notifyArrivals.js"
            },
            "outputs": []
        }
    }
}